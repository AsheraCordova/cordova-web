<project default="copy_from_android">
    <property name="project_dir"  value="../../android/app/src/main/"/>

    <property name="overwrite" value="true"/>
    <target name="copy_from_android">
		<copy todir="./src/main/resources" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/resources" includes="**"/>
  		</copy>
		<copy todir="./src/main/resources/www/css" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/assets/www/css" includes="**"/>
  		</copy>
  		
		<copy todir="./src/main/resources/www/layout" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/res/layout" includes="**"/>
  		</copy>
  		<copy todir="./src/main/resources/www" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/assets/www" includes="language.properties"/>
  		</copy>
  		<copy todir="./src/main/resources/res/xml" overwrite="${overwrite}">  
  			<fileset dir="../res/xml" includes="**"/>
  		</copy>
		<copy todir="./src/main/assets/www/res-swt/drawable" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/res-swt/drawable" includes="**"/>
  		</copy>   
  		<copy todir="./src/main/assets/www/css" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/assets/www/css" includes="**"/>
  		</copy>  
  		
  		<copy todir="./src/main/assets/www/res/font" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/res/font" includes="**"/>
  		</copy> 	
  		
  		<copy todir="./src/main/assets/www/js" overwrite="${overwrite}">  
  			<fileset dir="${project_dir}/assets/www/js" includes="index.js"/>
  		</copy>
  		
  		<copy todir="./src/main/assets/www/" overwrite="${overwrite}">  
  			<fileset dir="../res/xml" includes="config.xml"/>
  		</copy> 

  		<copy todir="./src/main/resources/res-swt/drawable" overwrite="${overwrite}" failonerror="false">  
  			<fileset dir="${project_dir}/res/drawable-port-hdpi/" includes="**" erroronmissingdir="false"/>
  		</copy> 		
    </target>
   
</project>
